# === üü¢ MASTER SWITCH ===
# Set to true to test logic without spending money
# Set to false to trade real funds (Requires Private Key)
PAPER_TRADE=true

# === üîë AUTHENTICATION (Live Mode Only) ===
# Private Key of the wallet that signs messages (with or without 0x prefix)
SIGNER_PRIVATE_KEY=0x...
# The Proxy Address found in your Polymarket Profile (Gnosis Safe address)
PROXY_ADDRESS=0x...
# Polygon RPC endpoint for balance checking and network interaction
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY

# === üîÑ MARKET DISCOVERY ===
# Set to true to automatically discover and rotate between 15m BTC markets
# Set to false to manually specify a single market (requires MARKET_ID and STRIKE_PRICE below)
AUTO_DISCOVER_MARKETS=true
# How many seconds before market expiry to close positions and rotate (10-300)
MARKET_ROTATION_THRESHOLD=30

# === ‚öôÔ∏è STRATEGY PARAMETERS ===
# (Only required if AUTO_DISCOVER_MARKETS=false)
# The YES Token ID (Gamma-15m Market)
MARKET_ID=0x...
# The "Price to Beat"
STRIKE_PRICE=98500.00

# === üí∞ CAPITAL MANAGEMENT ===
# All-in amount per trade
MAX_CAPITAL_PER_TRADE=20.00

# === üìä QUANT SETTINGS ===
# Demand X cents below Fair Value to enter (e.g., 0.05 = 5 cents)
PANIC_DISCOUNT=0.05
# Sell X cents higher than we bought (e.g., 0.03 = 3 cents)
SCALP_PROFIT=0.03
# Bail if Fair Value drops X cents below entry (e.g., 0.10 = 10 cents)
STOP_LOSS_THRESHOLD=0.10

# === ‚è∞ TIMING ===
# Market expiry timestamp (Unix milliseconds)
MARKET_EXPIRY_TIMESTAMP=1234567890000

# === üîÑ LOOP INTERVAL ===
# How often to run the main loop (milliseconds)
TICK_INTERVAL=2000
